{
  "extends": "airbnb/base",
  "parser": "babel-eslint",
  "env": {
    "mocha": true
  },
  "rules": {
    "spaced-comment": 0,
    "indent": [2, 4],
    "no-unused-vars": 1,
    "id-length": 0,
    "no-unused-expressions": 0,
    "no-param-reassign": ["warn", { "props": true }],
    "max-len": ["warn"],
    "no-else-return": 0,
    "no-confusing-arrow": 1,
    "prefer-rest-params": 0
  },
  "ecmaFeatures": {
    "restParams": true,
    "experimentalObjectRestSpread": true
  }
}